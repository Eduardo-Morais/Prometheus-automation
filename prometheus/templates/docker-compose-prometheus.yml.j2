services:
  prometheus:
    image: prom/prometheus
    container_name: prometheus
    volumes:
      - /home/{{ default_user.stdout }}/prometheus/prometheus.yml:/etc/prometheus/prometheus.yml
      - /home/{{ default_user.stdout }}/prometheus/alerts.yml:/etc/prometheus/alerts.yml
    ports:
      - "9090:9090"

    environment:
      - TIMEZONE=America/Recife

    restart: always
